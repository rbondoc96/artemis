{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "build",
        "removeComments": true,
        "moduleResolution": "node",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./types"
        ]
    },
    "include": [
        "**.ts",
        "./**/*",
    ],
    "exclude": [
        "./node_modules/*",
        "./build/*",
        "./types/*"
    ]
}